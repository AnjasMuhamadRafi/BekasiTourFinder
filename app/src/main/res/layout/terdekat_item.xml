<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recImage"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_image"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="@android:color/transparent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nama_wisata"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Nama Wisata"
                    android:textSize="24sp"
                    android:textColor="@color/white1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/lokasi_wisata"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Lokasi Wisata"
                    android:textColor="@color/white1"
                    android:textSize="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/nama_wisata"
                    app:layout_constraintStart_toStartOf="@+id/nama_wisata"
                    app:layout_constraintTop_toBottomOf="@+id/nama_wisata" />

                <TextView
                    android:id="@+id/jarakWisata"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Jarak Wisata"
                    android:textColor="@color/white1"
                    android:textSize="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@+id/nama_wisata"
                    app:layout_constraintTop_toBottomOf="@+id/lokasi_wisata" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
